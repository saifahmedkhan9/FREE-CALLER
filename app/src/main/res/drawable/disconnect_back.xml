<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#EF9A9A"
                android:startColor="#B71C1C"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#006699" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#EF5350"
                android:startColor="#EF5350"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#707070" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient

                android:endColor="#B71C1C"
                android:startColor="#EF5350"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#909090" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>